<theme>
    <formatVersion>7</formatVersion>
	<variables>
		<grid.itemspacing.px>30 * ${screen.height} / 1080</grid.itemspacing.px>
		<mainRed>CA0C0C</mainRed>
        <mainGray>838383</mainGray>
        <mainWhite>FFFFFF</mainWhite>
	</variables>
    <view name="screen">
        <text name="clock">
			<origin>1 1</origin>
			<pos>0.985 0.985</pos>
			<size>0.20 0</size>
			<fontSize>0.025</fontSize>
			<fontPath>./_art/Acre.otf</fontPath>
			<color>${mainWhite}A0</color>
		</text>
    </view>
    <view name="menu">
		<menuBackground name="menubg">
			<color>191919CC</color>
			<cornerSize>32 32</cornerSize>
		</menuBackground>
		<menuText name="menutitle">
			<fontPath>./_art/Acre.otf</fontPath>
			<fontSize>0.055</fontSize>
			<color>${mainRed}</color>
		</menuText>
		<menuText name="menutext">
			<fontPath>./_art/BebasNeue.otf</fontPath>
			<fontSize>0.045</fontSize>
			<color>${mainGray}</color>
			<selectorColor>${mainRed}</selectorColor>
			<separatorColor>${mainGray}44</separatorColor>
		</menuText>
		<menuText name="menufooter">
			<fontPath>./_art/Acre.otf</fontPath>
			<fontSize>0.035</fontSize>
			<color>${mainRed}</color>
		</menuText>
	</view>
    <view name="system">
        <image name="background" extra="true">
            <path>./_art/var/dot.png</path>
            <tile>false</tile>
            <size>1 1</size>
            <pos>0 0</pos>
            <origin>0 0</origin>
        </image>
        <image name="poster" extra="true">
            <path>./_art/posters/${system.theme}.jpg</path>
            <tile>false</tile>
            <origin>1 0</origin>
            <pos>1 0</pos>
            <size>0 1</size>
        </image>
        <image name="logo">
            <path>./_art/logos/${system.theme}.png</path>
        </image>
        <carousel name="systemcarousel">
            <type>vertical_wheel</type>
            <pos>0 0</pos>
            <size>1 1</size>
            <origin>0 0</origin>
            <color>00000000</color>
            <logoScale>1.4</logoScale>
            <logoSize>0.07 0.07</logoSize>
            <logoRotation>9</logoRotation>
            <logoRotationOrigin>-4.1 0.5</logoRotationOrigin>
            <logoAlignment>left</logoAlignment>
			<systemInfoDelay>0</systemInfoDelay>
			<defaultTransition>instant</defaultTransition>
            <maxLogoCount>5</maxLogoCount>
            <zIndex>75</zIndex>
        </carousel>
        <text name="sys_line1" extra="true">
            <fontPath>./_art/BebasNeue.otf</fontPath>
            <alignment>left</alignment>
            <fontSize>0.05</fontSize>
            <forceUppercase>1</forceUppercase>
            <origin>0 0</origin>
            <pos>0.15 0.142</pos>
            <color>${mainWhite}</color>
        </text>
        <text name="sys_line2" extra="true">
            <fontPath>./_art/BebasNeue.otf</fontPath>
            <alignment>left</alignment>
            <fontSize>0.2</fontSize>
            <forceUppercase>1</forceUppercase>
            <origin>0 0</origin>
            <pos>0.1475 0.16</pos>
            <color>${mainWhite}</color>
        </text>
        <text name="shortdescription" extra="true">
            <fontPath>./_art/Acre.otf</fontPath>
            <alignment>left</alignment>
            <forceUppercase>0</forceUppercase>
            <fontSize>0.025</fontSize>
            <color>${mainGray}</color>
            <origin>0 0</origin>
            <pos>0.15 0.1055</pos>
            <size>0.320 0.033</size>
        </text>
        <text name="systemInfo">
            <fontPath>./_art/Acre.otf</fontPath>
            <alignment>left</alignment>
            <backgroundColor>00000000</backgroundColor>
            <forceUppercase>1</forceUppercase>
            <color>${mainRed}</color>
            <origin>0 0</origin>
