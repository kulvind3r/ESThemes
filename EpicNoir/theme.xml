<theme>
    <formatVersion>4</formatVersion>
	<variables>
		<grid.itemspacing.px>30 * ${screen.height} / 1080</grid.itemspacing.px>
	</variables>
    <view name="screen">
        <text name="clock">
			<origin>1 1</origin>
			<pos>0.985 0.985</pos>
			<size>0.20 0</size>
			<fontSize>0.024</fontSize>
			<fontPath>./_art/Acre.otf</fontPath>
			<color>FFFFFFA0</color>
		</text>
    </view>
    <view name="menu">
		<menuBackground name="menubg">
			<color>121212BB</color>
			<cornerSize>32 32</cornerSize>
		</menuBackground>
		<menuText name="menutitle">
			<fontPath>./_art/Acre.otf</fontPath>
			<fontSize>0.06</fontSize>
			<color>CA0C0C</color>
		</menuText>
		<menuText name="menutext">
			<fontPath>./_art/BebasNeue.otf</fontPath>
			<fontSize>0.05</fontSize>
			<color>818181</color>
			<selectorColor>CA0C0C</selectorColor>
			<separatorColor>272727</separatorColor>
		</menuText>
		<menuText name="menufooter">
			<fontPath>./_art/Acre.otf</fontPath>
			<fontSize>0.03</fontSize>
			<color>CA0C0C</color>
		</menuText>
	</view>
    <view name="system">
        <image name="background" extra="true">
            <path>./_art/var/dot.png</path>
            <tile>false</tile>
            <size>1 1</size>
            <pos>0 0</pos>
            <origin>0 0</origin>
        </image>
        <image name="poster" extra="true">
            <path>./_art/posters/${system.theme}.jpg</path>
            <tile>false</tile>
            <origin>1 0</origin>
            <pos>1 0</pos>
            <size>0 1</size>
        </image>
        <image name="logo">
