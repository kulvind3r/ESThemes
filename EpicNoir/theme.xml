    <view name="basic">
		<image name="background" extra="true">
			<tile>false</tile>
			<path>./_art/gamelist-basic-bg.jpg</path>
			<size>1 1</size>
			<pos>0 0</pos>
		</image>
		<textlist name="gamelist">
			<selectorColor>CA0C0C</selectorColor>
			<selectedColor>EFECEC</selectedColor>
			<selectorHeight>0.0475</selectorHeight>
			<primaryColor>585858</primaryColor>
			<secondaryColor>818181</secondaryColor>
			<fontPath>./_art/Acre.otf</fontPath>
			<alignment>center</alignment>
			<origin>0.5 0.5</origin>
			<pos>0.5 0.51</pos>
			<size>0.4 0.85</size>
			<fontSize>0.03</fontSize>
			<lineSpacing>1.65</lineSpacing>
		</textlist>
	</view>
    <view name="grid">
		<image name="background" extra="true">
			<tile>false</tile>
			<path>./_art/grid-bg.jpg</path>
			<size>1 1</size>
			<pos>0 0</pos>
		</image>
		<imagegrid name="gamegrid">
			<margin>${grid.itemspacing.px}</margin>
			<padding>0.011 0.011 0.011 0.011</padding>
			<animateSelection></animateSelection>
			<origin>0 0</origin>
			<size>0.625 0.8</size>
			<pos>0.02 0.1</pos>
			<autoLayout>0 3</autoLayout>
			<cellProportion>0.66</cellProportion>
			<cellProportion if="{system.name} == 'gb'">1</cellProportion>
			<cellProportion if="{system.name} == 'gba'">1</cellProportion>
			<cellProportion if="{system.name} == 'psx'">1</cellProportion>
			<cellProportion if="{system.name} == 'dreamcast'">1</cellProportion>
			<cellProportion if="{system.name} == 'gbc'">1</cellProportion>
			<cellProportion if="{system.name} == 'snes'">1.65</cellProportion>
			<imageSource>cover</imageSource>
			<autoLayoutSelectedZoom>1.15</autoLayoutSelectedZoom>
			<scrollbarColor>585858</scrollbarColor>
			<scrollbarCorner>0.49</scrollbarCorner>
			<scrollbarSize>0.005</scrollbarSize>
			<scrollbarAlignment>right</scrollbarAlignment>
		</imagegrid>
		<gridtile name="default">
			<backgroundCornerSize>0 0</backgroundCornerSize>
			<imageColor>FFFFFFFF</imageColor>
			<backgroundEdgeColor>80808000</backgroundEdgeColor>
			<backgroundCenterColor>80808000</backgroundCenterColor>
			<padding>3 3</padding>
		</gridtile>
		<gridtile name="selected">
			<backgroundEdgeColor>CA0C0C00</backgroundEdgeColor>
			<backgroundCenterColor>CA0C0C00</backgroundCenterColor>
			<imageColor>FFFFFFFF</imageColor>
		</gridtile>
		<image name="md_marquee">
            <tile>false</tile>
            <origin>0.5 0.5</origin>
            <pos>0.835 0.575</pos>
            <maxSize>0.3 0.1</maxSize>
        </image>
		<text name="txt_descript" extra="true">
            <text>Description:</text>
            <fontPath>./_art/Acre.otf</fontPath>
