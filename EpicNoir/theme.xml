<theme>
    <formatVersion>4</formatVersion>
    <view name="screen">
        <text name="clock">
			<origin>1 1</origin>
			<pos>0.985 0.985</pos>
			<size>0.20 0</size>
			<fontSize>0.024</fontSize>
			<fontPath>./_art/Acre.otf</fontPath>
			<color>FFFFFFA0</color>
		</text>
    </view>
    <view name="menu">
		<menuBackground name="menubg">
			<color>121212BB</color>
			<cornerSize>32 32</cornerSize>
		</menuBackground>
		<menuText name="menutitle">
			<fontPath>./_art/Acre.otf</fontPath>
			<fontSize>0.06</fontSize>
			<color>CA0C0C</color>
		</menuText>
		<menuText name="menutext">
			<fontPath>./_art/BebasNeue.otf</fontPath>
			<fontSize>0.05</fontSize>
			<color>818181</color>
			<selectorColor>CA0C0C</selectorColor>
			<separatorColor>272727</separatorColor>
		</menuText>
		<menuText name="menufooter">
			<fontPath>./_art/Acre.otf</fontPath>
			<fontSize>0.03</fontSize>
			<color>CA0C0C</color>
		</menuText>
	</view>
    <view name="system">
        <image name="background" extra="true">
            <path>./_art/var/dot.png</path>
            <tile>false</tile>
            <size>1 1</size>
            <pos>0 0</pos>
            <origin>0 0</origin>
        </image>
        <image name="poster" extra="true">
            <path>./_art/posters/${system.theme}.jpg</path>
            <tile>false</tile>
            <origin>1 0</origin>
            <pos>1 0</pos>
            <size>0 1</size>
        </image>
        <image name="logo">
            <path>./_art/logos/${system.theme}.png</path>
        </image>
        <carousel name="systemcarousel">
            <type>vertical_wheel</type>
            <pos>0 0</pos>
            <size>1 1</size>
            <origin>0 0</origin>
            <color>00000000</color>
            <logoScale>1.4</logoScale>
            <logoSize>0.07 0.07</logoSize>
            <logoRotation>9</logoRotation>
            <logoRotationOrigin>-4.1 0.5</logoRotationOrigin>
            <logoAlignment>left</logoAlignment>
            <maxLogoCount>5</maxLogoCount>
            <zIndex>75</zIndex>
        </carousel>
        <text name="sys_line1" extra="true">
            <fontPath>./_art/BebasNeue.otf</fontPath>
            <alignment>left</alignment>
            <fontSize>0.048</fontSize>
            <forceUppercase>1</forceUppercase>
            <origin>0 0</origin>
            <pos>0.15 0.142</pos>
            <color>FFFFFF</color>
        </text>
        <text name="sys_line2" extra="true">
            <fontPath>./_art/BebasNeue.otf</fontPath>
            <alignment>left</alignment>
            <fontSize>0.18</fontSize>
            <forceUppercase>1</forceUppercase>
            <origin>0 0</origin>
            <pos>0.147 0.16</pos>
            <color>FFFFFF</color>
        </text>
        <text name="shortdescription" extra="true">
            <fontPath>./_art/Acre.otf</fontPath>
            <alignment>left</alignment>
            <forceUppercase>0</forceUppercase>
            <fontSize>0.021</fontSize>
            <color>9b9a9a</color>
            <origin>0 0</origin>
            <pos>0.15 0.1055</pos>
            <size>0.320 0.033</size>
        </text>
        <text name="systemInfo">
            <fontPath>./_art/Acre.otf</fontPath>
            <alignment>left</alignment>
            <backgroundColor>00000000</backgroundColor>
            <forceUppercase>1</forceUppercase>
            <color>A3332D</color>
            <origin>0 0</origin>
            <pos>0.15 0.3611</pos>
            <size>0.200 0.039</size>
            <fontSize>0.0315</fontSize>
        </text>
        <text name="longdescription" extra="true">
            <fontPath>./_art/Acre.otf</fontPath>
            <alignment>left</alignment>
            <forceUppercase>0</forceUppercase>
            <fontSize>0.021</fontSize>
            <color>8F8F8F</color>
            <lineSpacing>1.18</lineSpacing>
            <origin>0 0</origin>
            <pos>0.15 0.360</pos>
            <size>0.28 0.20</size>
        </text>
        <image name="buttonA" extra="true">
            <path>./_art/var/button.svg</path>
            <tile>false</tile>
            <origin>0 0</origin>
            <pos>0.15 0.545</pos>
            <size>0 0.044</size>
        </image>
        <helpsystem name="help">
            <fontPath>./_art/Acre.otf</fontPath>
            <fontSize>0.02</fontSize>
            <origin>1 1</origin>
            <!--0 0-->
            <pos>0 0</pos>
            <!--0.0890 0.6283-->
            <textColor>F8F8F8</textColor>
            <iconColor>F8F8F8</iconColor>
        </helpsystem>
        <image name="controller" extra="true">
            <path>./_art/controllers/${system.theme}.png</path>
            <tile>false</tile>
            <origin>0 0</origin>
            <pos>0.15 0.61</pos>
            <maxSize>0.32 0.32</maxSize>
        </image>
    </view>  
    <view name="basic, grid">
		<image name="background" extra="true">
			<tile>false</tile>
			<path>./_art/gamelist-basic-bg.jpg</path>
			<size>1 1</size>
			<pos>0 0</pos>
		</image>
	</view>
    <view name="basic">
		<textlist name="gamelist">
			<selectorColor>CA0C0C</selectorColor>
			<selectedColor>EFECEC</selectedColor>
			<selectorHeight>0.0475</selectorHeight>
			<primaryColor>585858</primaryColor>
			<secondaryColor>818181</secondaryColor>
			<fontPath>./_art/Acre.otf</fontPath>
			<alignment>center</alignment>
			<origin>0.5 0.5</origin>
			<pos>0.5 0.51</pos>
			<size>0.4 0.85</size>
			<fontSize>0.03</fontSize>
			<lineSpacing>1.65</lineSpacing>
		</textlist>
	</view>
    <view name="grid">
		<gridtile name="default">
			<backgroundColor>181818</backgroundColor>
		</gridtile>
		<gridtile name="selected">
			<backgroundColor>FFFFFFA0</backgroundColor>
			<padding>4 4</padding>
		</gridtile>
		<imagegrid name="gamegrid">
			<autoLayout>3 3</autoLayout>
		</imagegrid>
	</view>
    <view name="detailed, video">
        <image name="background" extra="true">
            <tile>false</tile>
            <path>./_art/gamelist-detailed-bg.jpg</path>
            <size>1 1</size>
            <pos>0 0</pos>
        </image>
        <textlist name="gamelist">
            <selectorColor>CA0C0C</selectorColor>
            <selectedColor>EFECEC</selectedColor>
            <selectorHeight>0.0475</selectorHeight>
            <primaryColor>585858</primaryColor>
            <secondaryColor>818181</secondaryColor>
            <fontPath>./_art/Acre.otf</fontPath>
            <alignment>left</alignment>
            <pos>0.01 0.095</pos>
            <size>0.31 0.85</size>
            <fontSize>0.03</fontSize>
            <lineSpacing>1.7</lineSpacing>
        </textlist>
        <text name="txt_descript" extra="true">
            <text>Description:</text>
            <fontPath>./_art/Acre.otf</fontPath>
            <alignment>left</alignment>
            <fontSize>0.0250</fontSize>
            <color>CA0C0C</color>
            <origin>0 0</origin>
            <pos>0.439 0.720</pos>
            <size>0.10 0.07</size>
        </text>
        <text name="md_description">
            <fontPath>./_art/Acre.otf</fontPath>
            <color>818181</color>
            <fontSize>0.02</fontSize>
            <alignment>left</alignment>
            <forceUppercase>0</forceUppercase>
            <lineSpacing>1.15</lineSpacing>
            <pos>0.439 0.787</pos>
            <size>0.464 0.09</size>
        </text>
        <rating name="md_rating">
            <pos>0.820 0.742</pos>
            <size>0 0.028</size>
            <filledPath>./_art/var/star_filled.svg</filledPath>
            <unfilledPath>./_art/var/star_hollow.svg</unfilledPath>
        </rating>
        <text name="txt_release" extra="true">
			<text>Released:</text>
			<fontPath>./_art/Acre.otf</fontPath>
			<alignment>left</alignment>
			<fontSize>0.02</fontSize>
			<color>CA0C0C</color>
			<origin>0 0</origin>
			<pos>0.439 0.870</pos>
            <size>0.10 0.07</size>
		</text>
        <datetime name="md_releasedate">
			<format>%m/%Y</format>
			<fontPath>./_art/Acre.otf</fontPath>
			<fontSize>0.02</fontSize>
			<color>818181</color>
			<origin>0 0</origin>
			<pos>0.495 0.870</pos>
            <size>0.10 0.07</size>
		</datetime>
        <text name="txt_playcount" extra="true">
			<text>Play Count:</text>
			<fontPath>./_art/Acre.otf</fontPath>
			<alignment>center</alignment>
			<fontSize>0.02</fontSize>
			<color>CA0C0C</color>
			<origin>0 0</origin>
			<pos>0.610 0.870</pos>
			<size>0.10 0.07</size>
		</text>
		<text name="md_playcount">
			<alignment>center</alignment>
			<fontPath>./_art/Acre.otf</fontPath>
			<fontSize>0.02</fontSize>
			<color>818181</color>
			<origin>0 0</origin>
			<pos>0.650 0.870</pos>
			<size>0.10 0.07</size>
		</text>
		<text name="txt_playtime" extra="true">
			<text>Play Time:</text>
			<fontPath>./_art/Acre.otf</fontPath>
			<alignment>right</alignment>
			<fontSize>0.02</fontSize>
			<color>CA0C0C</color>
			<origin>0 0</origin>
			<pos>0.745 0.870</pos>
			<size>0.10 0.07</size>
		</text>
		<text name="md_gametime">
			<alignment>right</alignment>
			<fontPath>./_art/Acre.otf</fontPath>
			<fontSize>0.02</fontSize>
			<color>818181</color>
			<origin>0 0</origin>
			<pos>0.795 0.870</pos>
			<size>0.10 0.07</size>
		</text>
    </view>
    <view name="basic, detailed, video, grid">
        <text name="top_label" extra="true">
            <fontPath>./_art/Acre.otf</fontPath>
            <text>Select Game</text>
            <alignment>left</alignment>
            <color>767676</color>
            <fontSize>0.034</fontSize>
            <origin>0 0</origin>
            <pos>0.037 0</pos>
            <size>0.25 0.06</size>
        </text>
        <text name="nameLabel" extra="true">
            <fontPath>./_art/Acre.otf</fontPath>
            <alignment>center</alignment>
            <forceUppercase>1</forceUppercase>
            <color>CA0C0C</color>
            <fontSize>0.036</fontSize>
            <origin>0.5 0.5</origin>
            <pos>0.5 0.027</pos>
            <size>0.25 0.06</size>
        </text>
        <helpsystem name="help">
            <origin>0 1</origin>
            <pos>0.01 0.975</pos>
			<fontPath>./_art/Acre.otf</fontPath>
			<fontSize>0.02</fontSize>
        </helpsystem>
    </view>
    <view name="detailed">
        <image name="md_image">
            <tile>false</tile>
            <origin>0.5 0.5</origin>
            <pos>0.67 0.42</pos>
            <maxSize>0.5 0.6</maxSize>
        </image>
    </view>
    <feature supported="video">
        <view name="video">
            <video name="md_video">
                <origin>0.5 0.5</origin>
                <pos>0.67 0.42</pos>
                <maxSize>0.5 0.6</maxSize>
                <delay>1.5</delay>
                <showSnapshotNoVideo>true</showSnapshotNoVideo>
                <showSnapshotDelay>true</showSnapshotDelay>
            </video>
        </view>
    </feature>
</theme>