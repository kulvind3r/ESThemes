            <tile>false</tile>
            <origin>0 0</origin>
            <pos>0.15 0.55</pos>
            <size>0 0.044</size>
        </image>
		<helpsystem name="help">
            <fontPath>./_art/Acre.otf</fontPath>
            <color>${mainGray}</color>
			<fontSize>0.025</fontSize>
        </helpsystem>
        <image name="controller" extra="true">
            <path>./_art/controllers/${system.theme}.png</path>
            <tile>false</tile>
            <origin>0 0</origin>
            <pos>0.15 0.61</pos>
            <maxSize>0.32 0.32</maxSize>
        </image>
    </view>
    <view name="basic">
		<image name="background" extra="true">
			<tile>false</tile>
			<path>./_art/gamelist-basic-bg.jpg</path>
			<size>1 1</size>
			<pos>0 0</pos>
		</image>
		<textlist name="gamelist">
			<selectorColor>${mainRed}</selectorColor>
			<selectedColor>${mainWhite}</selectedColor>
			<selectorHeight>0.0475</selectorHeight>
			<primaryColor>${mainGray}AA</primaryColor>
			<fontPath>./_art/Acre.otf</fontPath>
			<alignment>center</alignment>
			<origin>0.5 0.5</origin>
			<pos>0.5 0.51</pos>
			<size>0.4 0.85</size>
			<fontSize>0.03</fontSize>
			<lineSpacing>1.65</lineSpacing>
		</textlist>
	</view>
    <view name="grid">
		<image name="background" extra="true">
			<tile>false</tile>
			<path>./_art/grid-bg.jpg</path>
			<size>1 1</size>
			<pos>0 0</pos>
		</image>
		<imagegrid name="gamegrid">
			<margin>${grid.itemspacing.px}</margin>
			<padding>0.011 0.011 0.011 0.011</padding>
			<animateSelection></animateSelection>
			<origin>0 0</origin>
			<size>0.625 0.8</size>
			<pos>0.02 0.1</pos>
			<autoLayout>0 3</autoLayout>
			<cellProportion>0.73</cellProportion>
			<!--
				Add support for a new system by calculating width/height value
				of it's box art and adding a line below.
			-->
			<cellProportion if="{system.name} == 'psp'">0.58</cellProportion>
			<cellProportion if="{system.name} == 'gba'">1</cellProportion>
			<cellProportion if="{system.name} == 'gb'">1</cellProportion>
			<cellProportion if="{system.name} == 'gbc'">1</cellProportion>
			<cellProportion if="{system.name} == 'psx'">1</cellProportion>
			<cellProportion if="{system.name} == 'dreamcast'">1</cellProportion>
			<cellProportion if="{system.name} == 'gbc'">1</cellProportion>
			<cellProportion if="{system.name} == 'megadrive'">0.71</cellProportion>
			<cellProportion if="{system.name} == 'ps2'">0.71</cellProportion>
			<cellProportion if="{system.name} == 'wii'">0.71</cellProportion>
			<cellProportion if="{system.name} == 'gc'">0.72</cellProportion>
			<cellProportion if="{system.name} == 'snes'">1.65</cellProportion>
			<imageSource>cover</imageSource>
			<autoLayoutSelectedZoom>1.1</autoLayoutSelectedZoom>
			<scrollbarColor>${mainGray}</scrollbarColor>
			<scrollbarCorner>0.49</scrollbarCorner>
			<scrollbarSize>0.005</scrollbarSize>
			<scrollbarAlignment>right</scrollbarAlignment>
		</imagegrid>
		<gridtile name="default">
			<backgroundCornerSize>0 0</backgroundCornerSize>
			<imageColor>${mainWhite}FF</imageColor>
			<imageSizeMode>minSize</imageSizeMode>
			<backgroundEdgeColor>${mainGray}</backgroundEdgeColor>
			<backgroundCenterColor>${mainGray}</backgroundCenterColor>
			<padding>3 3</padding>
			
			<image name="ArtShade" extra="true">
				<origin>0 0</origin>
				<pos>0 0</pos>
				<size>1 1</size>
				<zIndex>2</zIndex>
				<visible>true</visible>
				<color>000000</color>
				<opacity>0.6</opacity>
				<path>./_art/var/bg_color.png</path>
				<storyboard event="activate">
					<animation property="opacity" from="0.6" to="0" duration="150" mode="linear"/>
				</storyboard>
				<storyboard event="deactivate">
					<animation property="opacity" from="0" to="0.6" duration="150" mode="linear"/>
				</storyboard>
				<scale>1.005</scale>
				<zIndex>30</zIndex>
			</image>
		</gridtile>
		<gridtile name="selected">
			<backgroundEdgeColor>${mainRed}</backgroundEdgeColor>
			<backgroundCenterColor>${mainRed}</backgroundCenterColor>
			<imageColor>${mainWhite}FF</imageColor>
		</gridtile>
		<image name="md_marquee">
            <tile>false</tile>
            <origin>0.5 0.5</origin>
            <pos>0.835 0.575</pos>
            <maxSize>0.3 0.1</maxSize>
        </image>
		<text name="txt_descript" extra="true">
            <text>Description:</text>
            <fontPath>./_art/Acre.otf</fontPath>
            <alignment>left</alignment>
            <fontSize>0.0250</fontSize>
            <color>${mainRed}</color>
            <origin>0 0</origin>
            <pos>0.685 0.65</pos>
            <size>0.10 0.07</size>
        </text>
        <text name="md_description">
            <fontPath>./_art/Acre.otf</fontPath>
            <color>${mainGray}</color>
            <fontSize>0.02</fontSize>
            <alignment>left</alignment>
            <forceUppercase>0</forceUppercase>
            <lineSpacing>1.15</lineSpacing>
            <pos>0.685 0.715</pos>
            <size>0.3 0.09</size>
        </text>
        <rating name="md_rating">
            <pos>0.91 0.67</pos>
            <size>0 0.028</size>
            <filledPath>./_art/var/star_filled.svg</filledPath>
            <unfilledPath>./_art/var/star_hollow.svg</unfilledPath>
        </rating>
        <text name="txt_release" extra="true">
			<text>Released:</text>
			<fontPath>./_art/Acre.otf</fontPath>
			<alignment>left</alignment>
			<fontSize>0.02</fontSize>
			<color>${mainRed}</color>
			<origin>0 0</origin>
			<pos>0.685 0.8</pos>
            <size>0.10 0.07</size>
		</text>
        <datetime name="md_releasedate">
			<format>%m/%Y</format>
			<fontPath>./_art/Acre.otf</fontPath>
			<fontSize>0.02</fontSize>
			<alignment>right</alignment>
			<color>${mainGray}</color>
			<origin>0 0</origin>
			<pos>0.74 0.8</pos>
            <size>0.05 0.07</size>
		</datetime>
		<text name="txt_lastplayed" extra="true">
			<text>Last Played:</text>
			<fontPath>./_art/Acre.otf</fontPath>
			<alignment>left</alignment>
			<fontSize>0.02</fontSize>
